{% extends 'base.html.twig' %}

{% block title %}User list{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
        <h1>Membre du site</h1>
        <ul>
            {# légèrement différent de php avec foreach userList as user #}
            {% for user in userList %}
                <li>
                    {{ user.firstName }} {{ user.lastName|upper }} : <br>
                    &nbsp;&nbsp;&nbsp; - Email : {{ user.email }} <br>
                    &nbsp;&nbsp;&nbsp; - Date de naissance : {{ user.birthDate|date('d F Y') }} <br>
                    &nbsp;&nbsp;&nbsp; - Création du compte : {{ user.createdDate|date('d F Y') }}<br>
                    &nbsp;&nbsp;&nbsp; <a href="{{ path('profile',{'idUser': user.id})}}">Détails utilisateur</a>

                </li> 
            {% endfor %}
        </ul>
</div>
{% endblock %}
