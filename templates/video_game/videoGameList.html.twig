{% extends 'base.html.twig' %}

{% block title %}Video game list{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Jeux vidéo :</h1>
    <ul>
        {# légèrement différent de php avec foreach videogameList as videogame #}
        {% for videogame in videogameList %}
            <li>
                {{ videogame.title }}: <br>
                &nbsp;&nbsp;&nbsp; - Editeur : {{ videogame.gameEditor.companyName }} <br>
                <a href="{{ path('detail-videogame',{'idVideoGame': videogame.id})}}">Détails</a>
            </li>
        {% endfor %}
    </ul>
</div>
{% endblock %}
